@model Post_Office_Management.Models.Delivery

@{
    ViewData["Title"] = "Create Delivery";
    Layout = "~/Views/Dashboard/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card px-3 py-2">
                <div class="card-header">
                    <h3>Create Delivery</h3>
                </div>
                <br />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="card-body">
                    
                    <form asp-action="Create" method="post">
                        <div class="form-group row">
                            <label asp-for="ReceiverName" class="col-md-4 col-form-label">Receiver Name</label>
                            <div class="col-md-8">
                                <input asp-for="ReceiverName" class="form-control" />
                                <span asp-validation-for="ReceiverName" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="form-group row">
                            <label asp-for="ReceiverContactNumber" class="col-md-4 col-form-label">Receiver Number</label>
                            <div class="col-md-8">
                                <input asp-for="ReceiverContactNumber" class="form-control" />
                                <span asp-validation-for="ReceiverContactNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="form-group row">
                            <label asp-for="Weight" class="col-md-4 col-form-label">Weight (in gram)</label>
                            <div class="col-md-8">
                                <input asp-for="Weight" class="form-control" />
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="form-group row">
                            <label asp-for="ServiceTypeId" class="col-md-4 col-form-label">Service </label>
                            <div class="col-md-8">
                                <select asp-for="ServiceTypeId" class="form-control" asp-items="@(ViewBag.ServiceTypes as SelectList)"></select>
                                <span asp-validation-for="ServiceTypeId" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="form-group row">
                            <label asp-for="FromOfficeId" class="col-md-4 col-form-label">From Office</label>
                            <div class="col-md-8">
                                <select asp-for="FromOfficeId" class="form-control" asp-items="@(ViewBag.FromOffices as SelectList)"></select>
                                <span asp-validation-for="FromOfficeId" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="form-group row">
                            <label asp-for="ToOfficeId" class="col-md-4 col-form-label">To Office</label>
                            <div class="col-md-8">
                                <select asp-for="ToOfficeId" class="form-control" asp-items="@(ViewBag.ToOffices as SelectList)"></select>
                                <span asp-validation-for="ToOfficeId" class="text-danger"></span>
                            </div>
                        </div>
                        <br/>
                        <div class="form-group row">
                            <div class="col-md-8 offset-md-4">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}