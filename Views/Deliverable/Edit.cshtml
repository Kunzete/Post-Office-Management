@model Post_Office_Management.Models.Delivery

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Dashboard/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card px-3 py-2">
                <div class="card-header">
                    <h3>Create Delivery</h3>
                </div>
                <br />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="card-body">

                    <form asp-action="Edit" method="post">
                        <input asp-for="Id" hidden/>
                        <div class="form-group row">
                            <label asp-for="ReceiverName" class="col-md-4 col-form-label">Receiver Name</label>
                            <div class="col-md-8">
                                <input asp-for="ReceiverName" class="form-control" />
                                <span asp-validation-for="ReceiverName" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="form-group row">
                            <label asp-for="ReceiverContactNumber" class="col-md-4 col-form-label">Receiver Number</label>
                            <div class="col-md-8">
                                <input asp-for="ReceiverContactNumber" class="form-control" />
                                <span asp-validation-for="ReceiverContactNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="form-group row">
                            <label asp-for="Weight" class="col-md-4 col-form-label">Weight (in gram)</label>
                            <div class="col-md-8">
                                <input asp-for="Weight" class="form-control" readonly/>
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="form-group row">
                            <label asp-for="Status" class="col-md-4 col-form-label">Status</label>
                            <div class="col-md-8">
                                <select asp-for="Status" asp-items="@Html.GetEnumSelectList<DeliveryStatus>()" class="form-control">
                                    <option selected disabled>Select Status</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="form-group row">
                            <div class="col-md-6 d-grid">
                                <input type="submit" value="Update" class="btn btn-primary" />
                            </div>
                            <div class="col-md-6 d-grid">
                                <a asp-action="List" class="btn btn-secondary">Back to List</a>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
