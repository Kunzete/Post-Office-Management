@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Dashboard/_Layout.cshtml";
}

<style>
       body{
        font-family: "Poppins", sans-serif;
        font-weight: 300;
       }

       .height{
        height: 100%;
       }
       

       .search{
       position: relative;
       box-shadow: 0 0 40px rgba(51, 51, 51, .1);
         
       }

       .search input{

        height: 60px;
        text-indent: 25px;
        border: 2px solid #d6d4d4;


       }


       .search input:focus{

        box-shadow: none;
        border: 2px solid blue;


       }

       .search .fa-search{

        position: absolute;
        top: 20px;
        left: 16px;

       }

       .search button{

        position: absolute;
        top: 5px;
        right: 5px;
        height: 50px;
        width: 110px;
        background: blue;

       }
</style>

<form asp-action="Parcel" method="post">
    <div class="container">
        <br/>
        <div class="row height d-flex justify-content-center align-items-center">

            <div class="col-md-12">

                <div class="search">
                    <i class="fa fa-search"></i>
                    <input type="text" id="TrackingID" name="TrackingID" class="form-control" placeholder="Curious about your parcle? Track Now">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>

            </div>

        </div>
    </div>
</form>